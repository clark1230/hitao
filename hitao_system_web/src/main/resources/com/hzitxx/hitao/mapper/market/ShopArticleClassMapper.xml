          ac_id=#{acId},
          ac_code=#{acCode},
          ac_name=#{acName},
          ac_parent_id=#{acParentId},
          ac_sort=#{acSort},
          is_del=#{isDel},
          ac_status=#{acStatus},
          created_time=#{createdTime},
          updated_time=#{updatedTime}
